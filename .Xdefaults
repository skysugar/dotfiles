!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                    96
Xft.antialias:              false
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt.termName:             rxvt
URxvt.depth:                32
URxvt.geometry:             150x40
URxvt.transparent:          false
URxvt.tintCddolor:          #fdf6e3
URxvt.shading:              10
URxvt.fading:               0
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.saveLines:            5000
URxvt.internalBorder:       3
URxvt.lineSpace:            0

! Fonts
URxvt.allow_bold:       true
URxvt*font:             xft:Monaco:pixelsize=12:antialias=true,xft:STHeiti:pixelsize=12:antialias=true,xft:Noto Color Emoji:style=regular:pixelsize=12
URxvt*boldFont:         xft:Monaco:pixelsize=12:antialias=true,xft:STHeiti:pixelsize=12:antialias=true,xft:Noto Color Emoji:style=regular:pixelsize=12
URxvt*italicFont:       xft:Monaco:pixelsize=12:antialias=true,xft:STHeiti:pixelsize=12:antialias=true,xft:Noto Color Emoji:style=regular:pixelsize=12
URxvt*bolditalicFont:   xft:Monaco:pixelsize=12:antialias=true,xft:STHeiti:pixelsize=12:antialias=true,xft:Noto Color Emoji:style=regular:pixelsize=12

! Fix font space
URxvt*letterSpace: 0

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:      default,clipboard,url-select,keyboard-select
URxvt.url-select.launcher:  google-chrome-stable
URxvt.matcher.button:       1
URxvt.url-select.underline: true
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s:           perl:keyboard-select:search

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true
